@model Homework6.Models.CardResponse
@{
    Layout = null;
}

<!DOCTYPE html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>
        .btn a {
            color: white;
            text-decoration: none;
        }

        body {
            background-color: #f1f1f1;
        }
    </style>
</head>

@using (Html.BeginForm())
{
    @Html.ValidationSummary()

    <h1>Birthday Card Generator</h1>
    <p>
        <label>To:</label> @Html.TextBoxFor(t => t.To,
        new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>
    <p>
        <label>From:</label> @Html.TextBoxFor(t => t.From,
        new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>
    <p>
        <label>Message:</label> @Html.TextBoxFor(t => t.Message,
        new { @class = "form-control", maxlength = 30, style = "width:200px;" })
    </p>
    <input type="submit" value="Send Card" class="btn-success" />
}
